
 <div class="notice"> </div>
 <div class="errors"> </div>
<% if flash[:error] %>
<div class="error" ><%=flash[:error] %></div>
<%end%>

<%unless @deal.official%>
<h3 style="text-decoration:underline;"><%=@deal.item_name%>&nbsp;at&nbsp;<%@store.each do |store|%>
<%=store.store.store_name%><%end%></h3>

<div class="view-image"><%=image_tag (@deal.image_url.to_s )%></div>

<div class="details-border">
     <%unless @deal.fixed_price.nil?%>
         <%if @deal.fixed_price%>   
         <div class="item-price-view">$<%=@deal.price%></div>
    <%else%>
             <div class="item-price-view"><%=@deal.percent_off%>%Off</div>
         <%end%>
     <%else%>
            <%if @deal.unfixed%>
            <div class="buy">Buy 2</div> <div class="item-price-view">get 1 free</div>
             <%else%>
             <div class="item-price-view">See Details </div>     
             <%end%> 
     <%end%>

    <div class="line-separator"></div> 
    <div style="font-size:24px;font-weight:bold;margin:6px;"><%=pluralize(@deal.plusminus,"vote")%></div>
    
    <div class="line-separator"></div>
    <div style="margin:6px;">
    <%=link_to image_tag("down.png"),vote_down_deal_path(@deal),:method=>:post,:remote=>true ,:class=>"vote-down-view" %>
    <%=link_to image_tag("up.png"),vote_up_deal_path(@deal),:method=>:post,:remote=>true,:class=>"vote-up-view" %>
    </div>
                    
 
      <%@store.each do |store|%>
         <%unless store.address.nil?%>
         <div style="margin:6px;"><b>Cross street:</b>
         <span class="address"><%=store.store.address%><%end%></span>
         <div class="line-separator"></div>      
      <div class="address"><%=truncate(@deal.town,:length=>21)%></div>  

<%end%> 

<%else%>
<div class="official-bar">OFFICIAL</div>
<h3 style="text-decoration:underline;"><%=@deal.size%>&nbsp;<%=@deal.brand%>&nbsp;<%=@deal.item_name%>&nbsp;at&nbsp;<%@store.each do |store|%>
<%=store.store.store_name%><%end%></h3>
<div class="view-image"> <%=image_tag (@deal.image_url.to_s )%></div>
<div class="details-border">
<%unless @deal.fixed_price.nil?%>
   <% if @deal.fixed_price%>
         
   <div>Sale:<span  class="price">$<%=number_with_precision(@deal.price,:precision=>2)%></span></div>
   <div class="line-separator"></div>
    <div>Original Price:<span  class="original-price">$<%=number_with_precision(@deal.reg_price,:precision=>2)%></span></div>
   <div class="line-separator"></div>
        <%if @saving %>
        <div class="saving">Saving:&nbsp;$<%=number_with_precision(@saving,:precision=>2) %></div>
        <div class="line-separator"></div>
        <%end%>
  <%else%>
            <div >Sale:<span class="item-price-view"><%=@deal.percent_off%>%Off</span></div>
            <div class="line-separator"></div>
             <div>Original Price:<span  class="original-price">$<%=number_with_precision(@deal.reg_price,:precision=>2)%></span></div>
             <div class="line-separator"></div>
   <%end%> 
<%else%>  
             <%if @deal.unfixed%>
             <div class="buy">Buy 2</div> <div class="item-price-view">get 1 free</div>
             <div class="line-separator"></div>
             <div>Original Price:<span  class="original-price">$<%=number_with_precision(@deal.reg_price,:precision=>2)%></span></div>
              <div class="line-separator"></div>
             <%else%>
             <div class="item-price-view">See Details below </div> 
              <div class="line-separator"></div>
             <div>Original Price:<span  class="original-price">$<%=number_with_precision(@deal.reg_price,:precision=>2)%></span></div>
              <div class="line-separator"></div>    
             <%end%> 
<%end%>

            
<% unless @deal.end_date.nil? %>
     <% if distance_of_time_in_words(@deal.end_date,Date.today).to_i>0 || distance_of_time_in_words(@deal.end_date,Date.today)=="about 1 month" %>
     <div class="deal-status"> Deal ending in&nbsp;<span style="font-weight:bolder;color:black;"><%=distance_of_time_in_words(@deal.end_date,Date.today) %></span></div>
       <div class="line-separator"></div>
     <%else%>
     <div style="font-weight:bold;font-size:18px;color:red;">Deal is closed</div>
        <div class="line-separator"></div>
     <%end%>		
 <%end%>
    
 <%unless @deal.available_items.nil? %>
 <div style="margin:7px;color:black;">only&nbsp;<%=@deal.available_items%>&nbsp;available</div>
 <div class="line-separator"></div>
 <%end%>
 <div style="font-size:24px;font-weight:bold;margin:6px;"><%=pluralize(@deal.plusminus,"vote")%></div>
<div style="margin:6px;"><%=link_to image_tag("down.png"),vote_down_deal_path(@deal),:method=>:post,:remote=>true ,:class=>"vote-down-view" %>
  <%=link_to image_tag("up.png"),vote_up_deal_path(@deal),:method=>:post,:remote=>true,:class=>"vote-up-view" %></div>
 <%end%>
</div>


<div>
<%if @deal.official%>
<%@store.each do |store|%>
<%=store.store.user.store.address%><br>

<%=store.store.user.store.town%>
<%=store.store.user.store.state%>
<%=store.store.user.store.zipcode%><br>
<%=store.store.user.store.phone%><br>
<%end%>
<%end%> 
</div>

<div class="clear"></div>
<div class="line"></div>
<% unless @deal.details.empty? %>
<H3>Deal Details</H3>
<%=simple_format word_wrap(@deal.details,:line_width=>80)%>

<%end%>
<div id="comments_count"><%=pluralize(@comments.count,"comment")%></div>

<% @comments.each do |comment|%>
<div id="comments">
<% if comment.user%>
<span class="inline_table"><%=image_tag ("noprofile.jpg")%></span>
<span class="inline_tables"><span style="text-decoration:underline;"><%=comment.user.username%></span>&nbsp;<span style="color:#808080;">said</span><br/>
<%=comment.body%></span><br/>
<%end%>
</div>

<div class="clear"></div>
<span class="time"><%=time_ago_in_words(comment.created_at)%>&nbsp;ago</span><br/>
<span class="line"></span>
<%end%>
<div class="comment-display"></div>
<div style="font-weight:bold;color:#808080;">Add a comment</div>
<%= form_for :comment,:remote => true,:url=>{:controller=>"comments",:action=>"create"},:html => { :id => 'new-comment'} do |f| %>
<%= f.hidden_field :deal_id ,:value=>@deal.id%>
  <%= f.text_area :body,:rows=>"4",:cols=>"98",:class=>"comment-box" %><br/>
  <% if user_signed_in? %>
  <%= f.hidden_field :user_id,:value => current_user.id%>
  <%end%>
  <%= f.submit "post",:class=>"post-button" %>
<% end %>

