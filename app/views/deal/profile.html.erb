<div class="container">
<div class="clear"></div>
Your points: <%=pluralize(current_user.karma,"point")%><br/>
credits:0<br/>
<% unless @total_comments==0 %>
<div class="comment-bar-alert" ><%=pluralize(@total_comments,"You have New comment")%></div>
<%else%>
<div style="display:none;"><%=@total_comments%></div>
<%end%>

<%@mydeals.each do |mydeal|  %>

<div class="image-search"><%=image_tag mydeal.image_url.to_s%></div>
<div class="item-name-search">
<a class="profile-item" href="/comment/index?deal_id=<%=mydeal.id%>"><%=mydeal.size%>&nbsp;<%=mydeal.brand%>
&nbsp;<%=mydeal.item_name%> </a><br/>
<%=pluralize(mydeal.plusminus,"vote")%><br/>
<% mydeal.stores.each do |store| %>
<%=store.store_name%><br/>
<%end%>
<%=pluralize(mydeal.comments.count,"comment")%><br/>	
<% if mydeal.official%>
<%=link_to "edit" ,edit_retailer_deal_path(mydeal)%>
<%else%>
<%=link_to "edit" ,edit_deal_path(mydeal)%>
<%end%>
<%=link_to "delete" ,delete_deal_path(mydeal),:confirm=>"Are you sure want to delete this deal",:method=>:delete%>

<% if mydeal.flagged %>
<div>This deal has been flagged ,Please delete the deal or make necessary corrections</div>
<%end%>
</div>
<%end%>

</div>