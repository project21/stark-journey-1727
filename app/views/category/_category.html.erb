<div class="notice">
  <%=flash[:notice]%>
  <div class="errors"><%=flash[:error]%></div>
  </div>
<h2><%=@category.category_name%></h2>
<div class="clear"></div>
<div class="header-line"></div>
<div class="clear"></div>

 <div style="float:left">
 <%if @questions.empty?%>
 <div class="empty">Spotsaving is a new network,<br><br> Be the first one in Your City<br><br> To ask about something.<br><br>
 <%=link_to "Ask",{:controller=>"questions",:action =>"new"} ,{:class=>"list-button" }%>
  </div>
 <%end%>
<% @questions.each do |question| %>
   <% if question.where && question.how_much %>
 <span class="inline_table"> <%=image_tag('q.png')%></span><span class="inline_tables-a"><a href="/questions/<%=question.id%>"> Where can i find <%=question.item%> for a low price? How much is it?</a><br>
