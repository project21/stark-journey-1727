           <a class="reply-button" href="/questions/<%=question.id%>">Reply</a><br></span>
            <div class="clear"></div>
            <div class="light-line"></div>
   <% elsif question.where %>
   <span class="inline_table"> <%=image_tag('q.png')%></span><span class="inline_tables-a">
