
<p>
 <div class="note">
  <%=flash[:notice]%>
  </div>
<%@dealss.each do |deal|%>
<a href="/comment/index?deal_id=<%=deal.id%>"><%=deal.size%>&nbsp;<%=deal.brand%>
&nbsp;<%=deal.item_name%> </a>for <%=deal.price%>$
<%=pluralize(deal.plusminus,"vote")%>
<%=link_to "vote down",vote_down_deal_path(deal),:method=>:post,:remote=>true %>
 <%=link_to "vote up",vote_up_deal_path(deal),:method=>:post,:remote=>true %>
<%=image_tag deal.image_url.to_s%>
<%=time_ago_in_words(deal.created_at)%>
<%=pluralize(deal.comments.count,"comment")%>
  <% deal.stores.each do |club| %>
    <%= club.store_name %>
    <%=club.address%>
     <a href="/comment/index?deal_id=<%=deal.id%>">view</a>

  <%end%>  
<%end%>

</p>
